<div class="page-header">
  <h3>Merchant #<%= @merchant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @merchant.username %></dd>

      <dt>First name</dt>
      <dd><%= @merchant.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @merchant.last_name %></dd>

      <dt>Email</dt>
      <dd><%= @merchant.email %></dd>

      <dt>Password</dt>
      <dd><%= @merchant.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/merchants" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
