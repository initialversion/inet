<div class="page-header">
  <h1>
    Merchants
    <a href="/merchants/new" class="btn btn-lg btn-success">New Merchant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.username %></td>
        <td><%= merchant.first_name %></td>
        <td><%= merchant.last_name %></td>
        <td><%= merchant.email %></td>
        <td><%= merchant.password %></td>
        <td>
          <a href="/merchants/<%= merchant.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @merchants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
